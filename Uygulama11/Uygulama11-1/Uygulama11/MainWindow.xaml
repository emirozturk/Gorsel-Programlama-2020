<Window x:Class="Uygulama11.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Uygulama11"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <WrapPanel x:Name="WpBilesenler" Grid.Row="0" />
        <StackPanel Grid.Row="1" Orientation="Horizontal">
            <TextBox x:Name="TbBoyut" Width="300" Margin="3"/>
            <Button x:Name="BtnEkle" Content="Ekle" Margin="3" Width="50" Click="BtnEkle_Click"/>
            <Button x:Name="BtnDegistir" Content="Değiştir" Margin="3" Width="50" Click="BtnDegistir_Click"/>
            <Button x:Name="BtnSil" Content="Sil" Margin="3" Width="50" Click="BtnSil_Click"/>
        </StackPanel>
    </Grid>
</Window>
